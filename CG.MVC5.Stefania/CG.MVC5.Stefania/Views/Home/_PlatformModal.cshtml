@model List<string>

<div id="platform" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Platform</h5>
                <button id="buttonCloseModal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("AddPlatform", "Home",
                    new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        OnComplete = "onCompleteAddPlatform",
                        UpdateTargetId = "platformList"
                    },
                    new { id = "formAddPlatform" }))

                {
                    <div class="row">
                        <div class="col-12">
                            <label for="namePlatform">Insert name of new platform:</label>
                        </div>
                        <div class="col-12">
                            <input id="namePlatform" type="text" class="form-control" name="platform" />
                            <label id="validationPlatform" class="text-danger hiddenLabel"></label>
                        </div>
                        <div class="col-12 text-left mt-2">
                            <button id="buttonPlatformAdd" type="submit" class="btn btn-primary">Add Platform</button>
                        </div>
                    </div>



                }
            </div>
        </div>
    </div>
</div>

 
        <div id="platformDelete" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delete Platform</h5>
                        <button id="buttonCloseModalDelete" type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Ajax.BeginForm("DeletePlatform", "Home",
                            new AjaxOptions
                            {
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "POST",
                                OnComplete = "onCompleteDeletePlatform",
                                UpdateTargetId = "platformList"
                            }
                            ))

                        {
                            <div class="row">
                                <div class="col-12">
                                    <label for="namePlatform">Select platform to delete:</label>
                                </div>
                                <div class="col-12">
                                    <select id="namePlatformSelect" class="form-control" name="platform">
                                        @foreach (string platform in Model)
                                        {
                                            <option value="@platform">@platform</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12 text-left mt-2">
                                    <button id="buttonPlatformDelete" type="submit" class="btn btn-danger">Delete Platform</button>
                                </div>
                            </div>



                        }
                    </div>
                </div>
            </div>
        </div>

}
