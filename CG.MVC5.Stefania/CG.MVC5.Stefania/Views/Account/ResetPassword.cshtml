@model CG.MVC5.Stefania.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
    ViewBag.Background = "forgot";
}

<div class="container" id="customContainer">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <img class="logo" src="/Content/Images/logo.png" />
        </div>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 col-sm-6 col-12">
            <div class="myForm">
                <form class="customForm" id="formResetPassword" action="@Url.Action("ResetPassword","Account",Model)" method="post">
                    <div class="form-group text-left">
                        <label for="inputPassword">New Password <a data-toggle="popover" data-content="Password must contain at least one upper case, one lower case, one number and one special character"><i class="fa fa-info-circle text-white cursorPointer"></i></a></label>
                        <input id="inputPassword" class="form-control inputShadow" name="Password" type="password" placeholder="New Password" />
                        <label id="checkPassword" class="text-danger hiddenLabel ml-auto" for="inputEmail"> Password format not correct</label><br />
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group text-left">
                        <label>Repeat Password</label>
                        <input id="inputRepeatPassword" class="form-control inputShadow" name="ConfirmPassword" type="password" placeholder="Repeat Password" />
                        <label id="checkConfirmPassword" class="text-danger hiddenLabel ml-auto" for="inputEmail"> Passwords are different</label><br />
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/myScript.js"></script>
}