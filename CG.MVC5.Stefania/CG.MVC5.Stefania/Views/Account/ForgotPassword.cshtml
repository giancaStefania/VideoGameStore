@model CG.MVC5.Stefania.Models.User
@{
    ViewBag.Title = "ForgotPassword";
    ViewBag.Background = "forgot";
}

<div class="container" id="customContainer">
    <div class="row align-items-center justify-content-center">
        <div class="col-12 text-center">
            <img class="logo" src="/Content/Images/logo.png" />
        </div>
        <div class="col-xl-6 col-lg-8 col-md-12">
            <div class="myForm">
                <form class="customForm" id="customForm" action="@Url.Action("ForgotPassword","Account",Model)" method="post">
                    <p>Forgot Password?</p>
                    <div class="form-group text-left">
                        <input id="inputEmail" class="form-control inputShadow" name="email" type="email" placeholder="Insert your email" />
                        <label id="checkEmail" class="text-danger hiddenLabel ml-auto" for="inputEmail"> Email format not correct</label>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Scripts/myScript.js"></script>
}

