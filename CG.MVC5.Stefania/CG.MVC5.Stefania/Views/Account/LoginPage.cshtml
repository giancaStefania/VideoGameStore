
@model CG.MVC5.Stefania.Models.User
@{
    ViewBag.Title = "Login";
    ViewBag.Background = "login";
}
    <div class="container-fluid backgroundLogin h-100">
        <div class="container" id="customContainer">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <img class="logo" src="/Content/Images/logo.png" />
                </div>
                <div class="col-xl-6 col-lg-8 col-md-12">
                    <div class="myForm">
                        <form class="customForm" id="formLogin" action="@Url.Action("LoginPage","Account",Model)" method="post">
                            <div class="form-group">
                                <label for="inputEmail">Email Address</label>
                                <input id="inputEmail" class="form-control inputShadow" name="email" type="email" placeholder="Email Address" />
                                <label id="checkEmail" class="text-danger hiddenLabel" for="inputEmail"> Email format not correct</label>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" class="form-control inputShadow" name="password" id="inputPassword" placeholder="Password" />
                                <label id="checkPassword" class="text-danger hiddenLabel" for="inputPassword"> Password format not correct</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })<br />
                                <label class="text-danger">@ViewBag.Error</label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="remember">Remember Me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                            <p><a href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="hiddenLabel" id=@Html.Raw(TempData["msg"])></div>

@section Scripts{
    <script src="~/Scripts/myScript.js"></script>
}
